prototype(Sitegeis.Stampede:Icon.Preview) < prototype(Neos.Fusion:Component) {
    @styleguide {
        title = "Icon Overview"
    }

    collections = ${Stampede.allCollections()}

    renderer = afx`
        <h1>all Icons</h1>
        <table>
            <Neos.Fusion:Loop items={props.collections} itemName="iconCollection">
                <tr>
                    <th colspan="4">{iconCollection.name}</th>
                </tr>
                <Neos.Fusion:Loop items={iconCollection.icons} itemName="icon">
                <tr>
                    <td style="padding: 10px;">{icon.name}</td>
                    <td style="padding: 10px;">
                        <Sitegeis.Stampede:Icon identifier={iconCollection.name + ':' + icon.name} />
                    </td>
                    <td style="padding: 10px; color: grey; background-color: black;">
                        <Sitegeis.Stampede:Icon identifier={iconCollection.name + ':' + icon.name} />
                    </td>
                    <td style="padding: 10px; color: white; background-color: grey;">
                        <Sitegeis.Stampede:Icon identifier={iconCollection.name + ':' + icon.name} />
                    </td>
                </tr>
                </Neos.Fusion:Loop>
            </Neos.Fusion:Loop>
        </table>
    `
}
